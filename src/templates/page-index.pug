  //
  +b.SECTION.intro.section
    .container
      +e.H2.subtitle The World’s first wallet thaht pays
      +e.H1.title WHILE YOU KEEP YOUR MONEY IN IT!
      +e.slider
        div
          +b.intro-slide
            p 
              strong 1-10 
