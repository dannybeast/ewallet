---
title: Личный кабинет
---

extends layouts/layout-lk

block variables 
  - var pageName = "lk-5"
  
block content

    +b.SECTION.lk-section
      //
      include partials/_lk-info

    +b.SECTION.lk-section
      //
      +b.lk-title-module(class="--border")
        +e.H3.title Моя команда
        +e.buttons
          +b.A(href="#", class="btn --border-gray-radius")
            span Регистрация нового партнера
            img(src="img/circle-plus.png", alt="")

    +b.SECTION.refferal.lk-section
      //
      mixin refferal-item(itemName, itemDesc, itemClass, avaSrc)
        +b.refferal-item(class=itemClass)
          +e.content
            +e.P.name
              span Имя 
              span Фамилия
            +e.P.desc #{itemDesc}
            +e.P.info
              span ID-партнера
              span Логин
          +e.icon
            if avaSrc == null
              +icon('user-team')
            else
              img(src=avaSrc, alt="")
      mixin level-list()
        +b.UL.level-list
          +e.LI
            +e.P.title Заработано
          +e.LI
            +e.BUTTON
              +e.indicator
                +e.SPAN.nmb(class="--color-1") 0
                +e.SPAN.nmb(class="--color-2") 1
                +e.SPAN.nmb(class="--color-3") 2
              +e.name Уровень 1 
              +e.price 101 у.е
          +e.LI(class=" active")
            +e.BUTTON
              +e.indicator
                +e.SPAN.nmb(class="--color-1") 1
                +e.SPAN.nmb(class="--color-2") 2
                +e.SPAN.nmb(class="--color-3") 1
              +e.name Уровень 2 
              +e.price 101 у.е
          +e.LI
            +e.BUTTON
              +e.indicator
                +e.SPAN.nmb(class="--color-1") 1
                +e.SPAN.nmb(class="--color-2") 2
                +e.SPAN.nmb(class="--color-3") 1
              +e.name Уровень 3 
              +e.price 101 у.е
          +e.LI
