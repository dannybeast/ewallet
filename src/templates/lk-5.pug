              +e.indicator
                +e.SPAN.nmb(class="--color-1") 0
                +e.SPAN.nmb(class="--color-2") 1
                +e.SPAN.nmb(class="--color-3") 2
              +e.name Уровень 4 
              +e.price 101 у.е
          +e.LI
            +e.BUTTON
              +e.indicator
